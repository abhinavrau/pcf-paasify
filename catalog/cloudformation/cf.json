{
   "AWSTemplateFormatVersion":"2010-09-09",
   "Description":"Deploys PCF",
   "Parameters":{
      "EnvName":{
         "Description":"Environment name",
         "Type":"String"
      },
      "DnsSuffix":{
         "Description":"DNS suffix (ie. aws.paasify.org)",
         "Type":"String"
      },
      "PivnetToken":{
         "Description":"Pivnet Token to download tiles",
         "Type":"String"
      },
      "Tiles": {
        "Description": "Comma-delimited list of tiles that should be pre-installed",
        "Type": "CommaDelimitedList",
        "Default": "mysql, rabbitmq, scs, metrics, healthwatch"
      }
      ,
      "SourceRepo": {
        "Description": "Paasify source repository",
        "Type":"String",
        "Default": "https://github.com/nthomson-pivotal/pcf-paasify"
      },
      "Cloud" : {
        "Type" : "String",
        "Default" : "aws",
        "AllowedValues" : ["aws", "gcp"],
        "Description" : "The cloud provider on which the environment will be provisioned"
      }
   },
   "Resources":{
      "S3StateAndSoftware":{
         "Type":"AWS::S3::Bucket",
         "Properties":{
            "BucketName":{
               "Fn::Join":[
                  ".",
                  [
                     {
                        "Ref":"EnvName"
                     },
                     {
                        "Ref":"AWS::Region"
                     },
                     {
                        "Ref":"AWS::AccountId"
                     },
                     "paasify-state"
                  ]
               ]
            }
         }
      },
      "Adminrole":{
         "Type":"AWS::IAM::Role",
         "Properties":{
            "RoleName":{
               "Fn::Join":[
                  ".",
                  [
                     {
                        "Ref":"AWS::StackName"
                     },
                     {
                        "Ref":"AWS::Region"
                     },
                     "paasify-codebuild"
                  ]
               ]
            },
            "AssumeRolePolicyDocument":{
               "Version":"2012-10-17",
               "Statement":[
                  {
                     "Effect":"Allow",
                     "Principal":{
                        "Service":[
                           "codebuild.amazonaws.com"
                        ]
                     },
                     "Action":[
                        "sts:AssumeRole"
                     ]
                  }
               ]
            },
            "Path":"/",
            "Policies":[
               {
                  "PolicyName":"adminaccess",
                  "PolicyDocument":{
                     "Version":"2012-10-17",
                     "Statement":[
                        {
                           "Action":"*",
                           "Effect":"Allow",
                           "Resource":"*"
                        }
                     ]
                  }
               }
            ]
         }
      },
      "BuildProject":{
         "Type":"AWS::CodeBuild::Project",
         "Properties":{
            "Name":{
               "Fn::Join":[
                  "_",
                  [
                     "paasify",
                     {
                        "Ref":"EnvName"
                     },
                     {
                        "Ref":"AWS::Region"
                     },
                     "build"
                  ]
               ]
            },
            "Description":"Deploy PCF",
            "ServiceRole":{
               "Ref":"Adminrole"
            },
            "Artifacts":{
               "Type":"no_artifacts"
            },
            "TimeoutInMinutes": 360,
            "Environment":{
               "Type":"LINUX_CONTAINER",
               "ComputeType":"BUILD_GENERAL1_SMALL",
               "Image":"aws/codebuild/docker:17.09.0",
               "EnvironmentVariables":[
                  {
                     "Name":"state_bucket",
                     "Value":{
                        "Ref":"S3StateAndSoftware"
                     }
                  },
                  {
                     "Name":"env",
                     "Value":{
                        "Ref":"EnvName"
                     }
                  },
                  {
                     "Name":"dns_suffix",
                     "Value":{
                        "Ref":"DnsSuffix"
                     }
                  },
                  {
                     "Name":"pivnet_token",
                     "Value":{
                        "Ref":"PivnetToken"
                     }
                  },
                  {
                    "Name":"tiles",
                    "Value":{
                        "Fn::Sub": [ "\"${JoinedTiles}\"", { "JoinedTiles": {"Fn::Join" : [ "\",\"", { "Ref":"Tiles" } ] }} ]
                    }
                 },
                 {
                    "Name":"cloud",
                    "Value":{
                       "Ref":"Cloud"
                    }
                 },
                 {
                    "Name":"command",
                    "Value": "apply"
                 }
               ]
            },
            "Source":{
               "Location": { "Ref" : "SourceRepo" },
               "Type":"GITHUB",
               "BuildSpec": "catalog/codebuild/buildspec.yml"
            }
         }
      },
      "DestroyProject":{
         "Type":"AWS::CodeBuild::Project",
         "Properties":{
            "Name":{
               "Fn::Join":[
                  "_",
                  [
                     "paasify",
                     {
                        "Ref":"EnvName"
                     },
                     {
                        "Ref":"AWS::Region"
                     },
                     "destroy"
                  ]
               ]
            },
            "Description":"Destroy PCF",
            "ServiceRole":{
               "Ref":"Adminrole"
            },
            "Artifacts":{
               "Type":"no_artifacts"
            },
            "TimeoutInMinutes": 30,
            "Environment":{
               "Type":"LINUX_CONTAINER",
               "ComputeType":"BUILD_GENERAL1_SMALL",
               "Image":"aws/codebuild/docker:17.09.0",
               "EnvironmentVariables":[
                  {
                      "Name":"state_bucket",
                      "Value":{
                        "Ref":"S3StateAndSoftware"
                      }
                  },
                  {
                     "Name":"env",
                     "Value":{
                        "Ref":"EnvName"
                     }
                  },
                  {
                     "Name":"dns_suffix",
                     "Value":{
                        "Ref":"DnsSuffix"
                     }
                  },
                  {
                     "Name":"pivnet_token",
                     "Value":{
                        "Ref":"PivnetToken"
                     }
                  },
                  {
                     "Name":"cloud",
                     "Value":{
                        "Ref":"Cloud"
                     }
                  }
               ]
            },
            "Source":{
               "Location": { "Ref" : "SourceRepo" },
               "Type":"GITHUB",
               "BuildSpec": "catalog/codebuild/destroy-buildspec.yml"
            }
         }
      }
   }
}
