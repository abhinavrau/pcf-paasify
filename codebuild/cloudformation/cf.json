{
   "AWSTemplateFormatVersion":"2010-09-09",
   "Description":"Deploys PAS",
   "Parameters":{
      "EnvName":{
         "Description":"Environment name",
         "Type":"String"
      },
      "DnsSuffix":{
         "Description":"DNS suffix (ie. aws.paasify.org)",
         "Type":"String"
      },
      "PivnetToken":{
         "Description":"Pivnet Token to download tiles",
         "Type":"String"
      },
      "Tiles": {
        "Description": "Comma-delimited list of tiles that should be pre-installed",
        "Type": "CommaDelimitedList",
        "Default": ""
      },
      "SourceRepo": {
        "Description": "Paasify source repository",
        "Type":"String",
        "Default": "https://github.com/nthomson-pivotal/pcf-paasify"
      },
      "SourceBranch":{
        "Description":"Use this branch in above repo (overrides tag)",
        "Type":"String",
        "Default": ""
      },
      "SourceTag":{
        "Description":"Use this tag in above repo",
        "Type":"String",
        "Default": ""
      },
      "Cloud" : {
        "Type" : "String",
        "Default" : "aws",
        "AllowedValues" : ["aws", "gcp", "azure"],
        "Description" : "The cloud provider on which the environment will be provisioned"
      }
   },
   "Resources":{
      "S3StateAndSoftware":{
         "Type":"AWS::S3::Bucket",
         "Properties":{
            "BucketName":{
               "Fn::Join":[
                  "-",
                  [
                     {
                        "Ref":"AWS::StackName"
                     },
                     {
                        "Ref":"AWS::AccountId"
                     },
                     "paasify-state"
                  ]
               ]
            }
         }
      },
      "CodeBuildRole":{
         "Type":"AWS::IAM::Role",
         "Properties":{
            "RoleName":{
               "Fn::Join":[
                  "-",
                  [
                     {
                        "Ref":"AWS::StackName"
                     },
                     "codebuild"
                  ]
               ]
            },
            "AssumeRolePolicyDocument":{
               "Version":"2012-10-17",
               "Statement":[
                  {
                     "Effect":"Allow",
                     "Principal":{
                        "Service":[
                           "codebuild.amazonaws.com"
                        ]
                     },
                     "Action":[
                        "sts:AssumeRole"
                     ]
                  }
               ]
            },
            "Path":"/",
            "Policies":[
               {
                  "PolicyName":"adminaccess",
                  "PolicyDocument":{
                     "Version":"2012-10-17",
                     "Statement":[
                        {
                           "Action":"*",
                           "Effect":"Allow",
                           "Resource":"*"
                        },
                        {
                           "Effect": "Allow",
                           "Resource": [
                              {
                                 "Fn::Join":[
                                    ":",
                                    [
                                       "arn:aws:logs",
                                       {
                                          "Ref":"AWS::Region"
                                       },
                                       {
                                          "Ref":"AWS::AccountId"
                                       },
                                       "log-group:/aws/codebuild/*"
                                    ]
                                 ]
                              },
                              {
                                 "Fn::Join":[
                                    ":",
                                    [
                                       "arn:aws:logs",
                                       {
                                          "Ref":"AWS::Region"
                                       },
                                       {
                                          "Ref":"AWS::AccountId"
                                       },
                                       "log-group:/aws/codebuild/*:*"
                                    ]
                                 ]
                              }
                           ],
                           "Action": [
                               "logs:CreateLogGroup",
                               "logs:CreateLogStream",
                               "logs:PutLogEvents"
                           ]
                        },
                        {
                           "Effect": "Allow",
                           "Resource": [
                              {
                                 "Fn::Join":[
                                    "-",
                                    [
                                       "arn:aws:s3:::codepipeline",
                                       {
                                          "Ref":"AWS::Region"
                                       },
                                       "*"
                                    ]
                                 ]
                              }
                           ],
                           "Action": [
                              "s3:PutObject",
                              "s3:GetObject",
                              "s3:GetObjectVersion",
                              "s3:GetBucketAcl",
                              "s3:GetBucketLocation"
                           ]
                        }
                     ]
                  }
               }
            ]
         }
      },
      "BuildProject":{
         "Type":"AWS::CodeBuild::Project",
         "Properties":{
            "Name":{
               "Fn::Join":[
                  "-",
                  [
                     {
                        "Ref":"AWS::StackName"
                     },
                     "build"
                  ]
               ]
            },
            "Description":"Deploy PAS",
            "ServiceRole":{
               "Ref":"CodeBuildRole"
            },
            "Artifacts":{
               "Type":"NO_ARTIFACTS"
            },
            "TimeoutInMinutes": 360,
            "Environment":{
               "Type":"LINUX_CONTAINER",
               "ComputeType":"BUILD_GENERAL1_SMALL",
               "Image":"aws/codebuild/docker:17.09.0",
               "EnvironmentVariables":[
                  {
                     "Name":"state_bucket",
                     "Value":{
                        "Ref":"S3StateAndSoftware"
                     }
                  },
                  {
                     "Name":"env",
                     "Value":{
                        "Ref":"EnvName"
                     }
                  },
                  {
                     "Name":"dns_suffix",
                     "Value":{
                        "Ref":"DnsSuffix"
                     }
                  },
                  {
                     "Name":"pivnet_token",
                     "Value":{
                        "Ref":"PivnetToken"
                     }
                  },
                  {
                    "Name":"tiles",
                    "Value":{
                        "Fn::Sub": [ "\"${JoinedTiles}\"", { "JoinedTiles": {"Fn::Join" : [ "\",\"", { "Ref":"Tiles" } ] }} ]
                    }
                 },
                 {
                    "Name":"cloud",
                    "Value":{
                       "Ref":"Cloud"
                    }
                 },
                 {
                    "Name":"command",
                    "Value": "apply"
                 },
                 {
                    "Name":"auto_apply",
                    "Value": "1"
                 },
                 {
                    "Name":"branch",
                    "Value":{
                       "Ref":"SourceBranch"
                    }
                 },
                 {
                    "Name": "tag",
                    "Value":{
                       "Ref":"SourceTag"
                    }
                 },
                 {
                    "Name": "state_key",
                    "Value": "default"
                 }
               ]
            },
            "Source":{
               "Location": { "Ref" : "SourceRepo" },
               "Type":"GITHUB",
               "BuildSpec": "codebuild/buildspec.yml"
            }
         }
      },
      "DestroyProject":{
         "Type":"AWS::CodeBuild::Project",
         "Properties":{
            "Name":{
               "Fn::Join":[
                  "-",
                  [
                     {
                        "Ref":"AWS::StackName"
                     },
                     "destroy"
                  ]
               ]
            },
            "Description":"Destroy PAS",
            "ServiceRole":{
               "Ref":"CodeBuildRole"
            },
            "Artifacts":{
               "Type":"NO_ARTIFACTS"
            },
            "TimeoutInMinutes": 60,
            "Environment":{
               "Type":"LINUX_CONTAINER",
               "ComputeType":"BUILD_GENERAL1_SMALL",
               "Image":"aws/codebuild/docker:17.09.0",
               "EnvironmentVariables":[
                  {
                      "Name":"state_bucket",
                      "Value":{
                        "Ref":"S3StateAndSoftware"
                      }
                  },
                  {
                     "Name":"env",
                     "Value":{
                        "Ref":"EnvName"
                     }
                  },
                  {
                     "Name":"dns_suffix",
                     "Value":{
                        "Ref":"DnsSuffix"
                     }
                  },
                  {
                     "Name":"pivnet_token",
                     "Value":{
                        "Ref":"PivnetToken"
                     }
                  },
                  {
                     "Name":"cloud",
                     "Value":{
                        "Ref":"Cloud"
                     }
                  },
                  {
                     "Name":"branch",
                     "Value":{
                        "Ref":"SourceBranch"
                     }
                  },
                  {
                     "Name": "tag",
                     "Value":{
                        "Ref":"SourceTag"
                     }
                  },
                  {
                     "Name": "state_key",
                     "Value": "default"
                  }
               ]
            },
            "Source":{
               "Location": { "Ref" : "SourceRepo" },
               "Type":"GITHUB",
               "BuildSpec": "codebuild/destroy-buildspec.yml"
            }
         }
      }
   }
}
